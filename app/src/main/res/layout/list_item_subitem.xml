<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingLeft="15dp"
    android:orientation="vertical" >
	
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:padding="12dp">
        
        <ImageView 
            android:id="@+id/iv_channel_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:background="@drawable/channel_animalp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true" />
        
		<TextView
		    android:id="@+id/tv_channel_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@+id/tv_channel_number"
		    android:layout_toRightOf="@+id/iv_channel_icon"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:text="TextView"
		    android:textColor="#ffffff"
		    android:textSize="20dp" />
		
		<TextView
	        android:id="@+id/tv_channel_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="TextView"
	        android:textSize="20dp"
	        android:textColor="#000000"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:background="#959ca6" 
	        android:layout_marginRight="15dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true" />
		
		<TextView 
		    android:id="@+id/tv_channel_url"
		    android:layout_width="1dp"
	        android:layout_height="1dp"
	        android:text=""
	        android:visibility="invisible" />
		
		<TextView
	        android:id="@+id/tv_channel_id"
	        android:layout_width="1dp"
	        android:layout_height="1dp"
	        android:visibility="invisible" />
		
    </RelativeLayout >
    

</LinearLayout>
