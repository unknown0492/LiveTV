<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/transparent"
    tools:context="com.amlogic.DTVPlayer.TvListSimple" > 
    
    <ListView
        android:id="@+id/list_main"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none"
        android:focusable="true"
        android:visibility="visible"
        android:paddingBottom="25dp"
        android:background="@drawable/sub_list_background"
        android:listSelector="@drawable/main_list_selector">
    </ListView>
    
    
    
    <LinearLayout	
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentEnd="true"
	    android:layout_margin="50dp"
	    android:orientation="vertical" >
	    
	    <TextView 
	        android:layout_width="wrap_content" 
	        android:layout_height="match_parent"
	        android:text="Now Showing"
	        android:padding="5dp"
	        android:paddingBottom="30dp"
	        android:textSize="25sp" />
	    
	    <ImageView 
	        android:layout_width="73dp"
	        android:layout_height="45dp"
			android:background="@drawable/icon_adithya_tv"
			android:id="@+id/iv_channel_icon1"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content" 
	        android:layout_height="match_parent"
	        android:text="Adithya TV"
	        android:id="@+id/tv_channel_name1"
	        android:padding="5dp"
	        android:textStyle="bold"
	        android:textSize="20sp" />

	</LinearLayout>
    
	
</RelativeLayout>
